    <style name="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/abc_spinner_textfield_background_material</item>
        <item name="android:windowElevation">10dp</item>

    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#7296989A</item>
    </style>


    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Button.Accent.Borderless.WhiteText" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:colorButtonNormal">@color/white</item>

    </style>



    <style name="cart_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <!-- 模糊 -->
    </style>

    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="textColor">@color/grey_10</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="cardBackground">#FFFF</item>
        <item name="dividerColor">@color/grey_600</item>
        <item name="iconPlaceholder">@drawable/ic_person</item>
    </style>
    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark"    parent="Theme.AppCompat.NoActionBar">
        <item name="textColor">@color/grey_600</item>
        <item name="secondaryTextColor">#8033343B</item>
        <item name="cardBackground">#FFFF</item>
        <item name="dividerColor">@color/grey_600</item>
        <item name="iconPlaceholder">@drawable/ic_person</item>
    </style>


    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



