<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="cardBackground">#ffffff</item>
        <item name="textColor">@color/grey_800</item>
        <item name="tintColor">@color/grey_600</item>
        <item name="buttonColor">#2196F3</item>
        <item name="toolbarColor">#3F84E0</item>
        <item name="hintcolor">@color/grey_600</item>
        <item name="headerimage">@drawable/material_bg_1</item>
        <item name="android:dialogTheme">@style/Dialog.Theme</item>
        <item name="addpic">@drawable/landscape</item>
        <item name="add_expandable">@drawable/ic_add1</item>
        <item name="dividercolor">@color/grey_20</item>
        <item name="card_activity">@color/grey_300</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryDark">@color/grey_600</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#ffffff</item>
        <item name="hintcolor">@color/grey_10</item>
        <item name="cardBackground">#424242</item>
        <item name="backgroundcolor">#303030</item>
        <item name="windowActionBar">false</item>
        <item name="headerimage">@drawable/headerimage</item>
        <item name="toolbarColor">#010101</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#2196F3</item>
        <item name="dividercolor">@color/grey_800</item>
        <item name="addpic">@drawable/add_image</item>
        <item name="add_expandable">@drawable/ic_add</item>
        <item name="android:dialogTheme">@style/Dialog.ThemeDark</item>
        <item name="card_activity">@color/grey_900</item>


    </style>
    <style name="Dialog.Theme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/grey_10</item>
        <item name="colorPrimaryDark">@color/grey_100</item>
        <item name="colorAccent">@color/light_blue_600</item>
        <item name="textColor">@color/blue_A200</item>

