        <item name="borderlessButtonStyle">@style/Button.Accent.Borderless.WhiteText</item>
    </style>

    <style name="Dialog.ThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/grey_10</item>
        <item name="colorPrimaryDark">@color/grey_100</item>
        <item name="colorAccent">@color/light_blue_600</item>
        <item name="textColor">@color/blue_A200</item>
        <item name="android:background">@color/grey_800</item>
        <item name="borderlessButtonStyle">@style/Button.Accent.Borderless.WhiteText</item>


    </style>
    <style name="buttonstyleDialog" parent="DreActivityThemeDark">
        <item name="cardBackground">@color/white</item>
        <item name="textColor">@color/blue_grey_500</item>

    </style>
